<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>회원가입</title>
    <link rel="stylesheet" href="../css/membership.css" />
    <script defer src="../js/membership.js"></script>
    <!-- Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!-- modal -->
    <link href="//cdn.jsdelivr.net/npm/@sweetalert2/theme-material-ui/material-ui.css" rel="stylesheet">
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>


    <script>
        /* !!!아이디 중복 검사 */
        function idCheck() {
            let form = document.getElementById('form_membership');

            axios({
                method: 'post',
                url: 'http://localhost:8000/user/id_check',
                data: {
                    user_id: form.id.value,
                }
            }).then((rep) => {
                return rep.data;
            }).then((data) => {
                console.log(data);
                // data는 UserController에서 true, false 형식으로 보낸다.
                if (data) { // data가 true이면 실행
                    alert('사용 가능한 아이디입니다.');
                    $("#btnJoin").removeAttr("disabled") // 가입하기 버튼의 disabled 속성 제거
                } else { // data가 false이면 실행
                    alert('사용할 수 없는 아이디입니다');
                    $("#btnJoin").attr("disabled", "true"); // 가입하기 버튼에 disabled 속성 추가
                }
            });
        }

        /* !!!닉네임 중복 검사 */
        function nickCheck() {
            let form = document.getElementById('form_membership');

            axios({
                method: 'post',
                url: 'http://localhost:8000/user/nick_check',
                data: {
                    nickName: form.nick.value,
                }
            }).then((rep) => {
                return rep.data;
            }).then((data) => {
                console.log(data);
                // data는 UserController에서 true, false 형식으로 보낸다.
                if (data) { // data가 true이면 실행
                    alert('사용 가능한 닉네임입니다.');
                    $("#btnJoin").removeAttr("disabled") // 가입하기 버튼의 disabled 속성 제거
                } else { // data가 false이면 실행
                    alert('사용할 수 없는 닉네임입니다.');
                    $("#btnJoin").attr("disabled", "true") // 가입하기 버튼에 disabled 속성 추가
                }
            });
        }


        /* 가입하기 버튼 클릭 시*/
