                }).then((rep) => {
                    return rep.data;
                }).then((data) => {
                    console.log(data);
                    alert('회원가입을 축하드립니다.');
                    document.location.href = 'http://localhost:8000/user/login';
                    //가입 후 바로 로그인하도록 수정했습니다
                })
